<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#0F77BD"
        android:gravity="center"
        android:text="找回密码"
        android:textColor="#ffffff"
        android:textSize="16sp" />


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/text_sharp"
            android:inputType="number"
            android:hint="输入你的手机号"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#BDBDBD"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/et_fpw"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/text_sharp"
            android:hint="输入你的新密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#BDBDBD"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/et_spw"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/text_sharp"
            android:hint="再次输入你的新密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#BDBDBD"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/et_token"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/text_sharp"
            android:hint="验证码"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#BDBDBD"
            android:textSize="16sp" />

        <Button
            android:id="@+id/token_btn"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:enabled="true"
            android:background="#00A2E8"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/commit_btn"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="#00A2E8"
            android:gravity="center"
            android:enabled="true"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="密码必须是由数字，字母和特殊字符(@$!%*?)组成，且密码长度不低于8位,不能是纯数字或纯字母,不能包括用户名！"
            android:textColor="@color/red_btn_bg_color"
            android:textSize="12sp" />
    </RelativeLayout>


</LinearLayout>

